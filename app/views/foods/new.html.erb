<h1>Create a food</h1>

<div class="new-food-container">
  <%= form_with(model: @food, url: foods_path(current_user), method: :post) do |form| %>
    <div class="form-group">  
      <%= form.text_field :name, placeholder: "Name of food", class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.text_field :measurement_unit, placeholder: "Measurement unit", class: 'form-input' %>
    </div>

    <div class="form-group">  
      <%= form.text_field :price, placeholder: "Price", class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.text_field :quantity, placeholder: "Quantity", class: 'form-input' %>
    </div>

    <%= form.submit 'Create Food', class: 'btn btn-primary' %>
  <% end%>
</div>