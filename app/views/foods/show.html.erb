<table class="food-table">
  <thead>
    <tr>
      <th colspan="2">Food Item Details</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%= @food.name %></td>
    </tr>
    <tr>
      <td><strong>Measurement Unit:</strong></td>
      <td><%= @food.measurement_unit %></td>
    </tr>
    <tr>
      <td><strong>Price:</strong></td>
      <td><%= @food.price %></td>
    </tr>
    <tr>
      <td><strong>Quantity:</strong></td>
      <td><%= @food.quantity %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_food_path(@food) %> |
<%= link_to 'Back', foods_path %>

<%= button_to 'Delete', food_path(@food), method: :delete, data: { confirm: 'Are you sure you want to delete this food item?' }, class: 'btn btn-danger' %>
