<!DOCTYPE html>
<html>
<head>
  <title>Capstone</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <!-- Link to the external CSS file -->
  <link rel="stylesheet" type="text/css" href="/assets/styles.css">
</head>

<body class="custom-body">
  <div class="container custom-container">
    <h2 class="custom-heading">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource, class: "custom-error-messages" %>

      <div class="field custom-field">
        <%= f.text_field :name, placeholder: "Name", class: "custom-input" %>
      </div>

      <div class="field custom-field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "custom-input" %>
      </div>

      <div class="field custom-field">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "custom-input" %>
      </div>

      <div class="field custom-field">
        <%= f.password_field :password_confirmation, placeholder: "Password", autocomplete: "new-password", class: "custom-input" %>
      </div>

      <div class="actions custom-actions">
        <%= f.submit "Sign up", class: "custom-submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</body>
</html>
