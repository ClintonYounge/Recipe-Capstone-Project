<h1>Shopping list</h1>

<table class="food-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @unused_foods.each do |food| %>
      <tr>
        <td><%= link_to food.name, food_path(food), class: 'food-name' %></td>
        <td>$<%= food.price * food.quantity %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><strong>Total</strong></td>
      <td><strong>$<%= @unused_foods.sum { |food| food.price * food.quantity } %></strong></td>
    </tr>
</table>
